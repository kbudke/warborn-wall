<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h2>Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.email_field :email, placeholder: "Email Address", class: "form-control", autofocus: true %>
      </div>

        <div class="form-group">
        <%= f.text_field :name, placeholder: "Your Name", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.text_field :username, placeholder: "Unique Username", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.text_field :location, placeholder: "Where You At?", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.text_area :bio, placeholder: "Tell Us About Yourself", class: "form-control" %>
      </div>

        <div class="form-group">
        <strong>Choose an Avatar:</strong> <%= f.file_field :avatar %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, placeholder: "Password (#{@minimum_password_length} characters minimum)", class: "form-control", autocomplete: "off" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", class: "form-control", autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign Up", class: "btn btn-success" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
    </div>
</div>
